{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "src",
    "allowJs": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
