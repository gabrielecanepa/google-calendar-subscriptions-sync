{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
